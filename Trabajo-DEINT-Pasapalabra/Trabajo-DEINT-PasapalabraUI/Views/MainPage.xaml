<Page
    x:Class="Trabajo_DEINT_PasapalabraUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trabajo_DEINT_PasapalabraUI"
    xmlns:ut="using:Trabajo_DEINT_PasapalabraUI.Utils"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

   
        <!--<Storyboard x:Name="storyboard2">
            <DoubleAnimation EnableDependentAnimation="True"
                AutoReverse="False" Storyboard.TargetName="ellipse"
                Storyboard.TargetProperty="Width" From="0" To="100" Duration="0:0:01"/>
        </Storyboard>
        <Storyboard x:Name="storyboard3">
            <DoubleAnimation EnableDependentAnimation="True" 
                AutoReverse="False" Storyboard.TargetName="ellipse"
                Storyboard.TargetProperty="Height" From="0" To="100" Duration="0:0:01"/>
        </Storyboard>-->

    
    <RelativePanel>
        <ListBox  x:Name="listBoxPrueba" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <ut:clsCircularPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate >
                    <StackPanel>
                        <StackPanel.Resources>
                            <Storyboard x:Name="storyboard">
                                <ColorAnimation Storyboard.TargetName="colors" Storyboard.TargetProperty="Color"
                            From="Red" To="Yellow" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever" BeginTime="0:0:4"/>
                            </Storyboard>
                        </StackPanel.Resources>
                        <Button CornerRadius="90" Height="64" Width="64">
                            <Button.Background>
                                <SolidColorBrush x:Name="colors" Color="Red">
                                </SolidColorBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </RelativePanel>
</Page>
